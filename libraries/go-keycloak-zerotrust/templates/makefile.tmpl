# Monitoring
# ================================

.PHONY: monitoring-start
monitoring-start: ## ğŸ“Š Start monitoring stack (Prometheus & Grafana)
	@echo "$(BLUE)Starting monitoring stack...$(NC)"
	@$(DOCKER_COMPOSE) -f docker-compose.monitoring.yml up -d
	@echo "$(GREEN)âœ… Monitoring available at:$(NC)"
	@echo "ğŸ“ˆ Prometheus: http://localhost:9090"
	@echo "ğŸ“Š Grafana: http://localhost:3001 (admin/admin)"

# ================================
# Cleanup
# ================================

.PHONY: clean
clean: ## ğŸ§¹ Clean build artifacts
	@echo "$(BLUE)Cleaning build artifacts...$(NC)"
	@rm -rf $(BUILD_DIR)
	@rm -f coverage.out coverage.html
	@$(GOCMD) clean -cache -testcache

.PHONY: clean-docker
clean-docker: services-stop ## ğŸ§¹ Clean Docker resources
	@echo "$(BLUE)Cleaning Docker resources...$(NC)"
	@$(DOCKER_COMPOSE) down -v --remove-orphans
	@docker system prune -f

# ================================
# Development Workflows
# ================================

.PHONY: dev
dev: setup-env services-start ## ğŸš€ Start development environment
	@echo "$(GREEN)âœ… Development environment ready!$(NC)"
	@echo ""
	@echo "$(YELLOW)Available endpoints:$(NC)"
	@echo "  ğŸŒ Application: http://localhost:8080"
	@echo "  ğŸ“š Swagger UI: http://localhost:8080/swagger/index.html" 
	@echo "  ğŸ” Keycloak: http://localhost:8082/admin"

.PHONY: full-build
full-build: swagger frontend-build build ## ğŸ”¨ Full build (docs + frontend + backend)

.PHONY: full-test
full-test: lint security test test-e2e ## ğŸ§ª Run all tests and checks

.PHONY: demo
demo: ## ğŸ¬ Run demo workflow
