# MVP Zero Trust Auth System - Environment Configuration
# Copy this file to .env and modify values as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mvp_db
DB_USER=mvp_user
DB_PASSWORD=mvp_password
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=disable

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_CLUSTER=mvp-cluster

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Observability Configuration
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin
JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Service Configuration
SERVICE_NAME=mvp-auth-service
SERVICE_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=debug
LOG_FORMAT=console
HTTP_PORT=8080
METRICS_PORT=9000

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-here
TLS_CERT_PATH=./certs/server.crt
TLS_KEY_PATH=./certs/server.key

# SPIRE Configuration
SPIRE_SERVER_ADDRESS=unix:///tmp/spire-agent/public/api.sock
SPIRE_TRUST_DOMAIN=mvp.local

# Development Configuration
DEV_MODE=true
DEBUG=true
HOT_RELOAD=true

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=mvp-zero-trust-auth
COMPOSE_FILE=docker-compose.yml
